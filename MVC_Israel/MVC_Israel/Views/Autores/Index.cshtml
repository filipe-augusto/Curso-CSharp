@using MVC_Israel.Models;
@model List<Autores>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="container-fluid">
    <div class="row col-md-3">
        <h1 class="text-capitalize "> Autores</h1>
        @Html.ActionLink("Cadastrar", "Create", "Autores", new { @class = "btn btn-primary" })
    </div>
</div>


<div class="container"> 
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Pais</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.IdAutor</th>
                    <td>@item.Nome</td>
                    <td>@item.Pais</td>
                    <td>
                        @Html.ActionLink("Deletar", "Delete", "Autores", new { IdAutor = item.IdAutor }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Editar", "Edit", "Autores", new { IdAutor = item.IdAutor }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
        </table>


</div>
